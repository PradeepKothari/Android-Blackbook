<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kogent.android.AudioVideoUsingMediaplayer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kogent.android.AudioVideoUsingMediaplayer.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.kogent.android.AudioVideoUsingMediaplayer.audioplayer" android:label="audioplayer">
            <intent-filter>
                <category android:name="com.kogent.android.AudioVideoUsingMediaplayer.audioplayer" />
            </intent-filter>
        </activity>

        <activity android:name="com.kogent.android.AudioVideoUsingMediaplayer.videoplayer" android:label="videoplayer">
            <intent-filter>
                <category android:name="com.kogent.android.AudioVideoUsingMediaplayer.videoplayer" />
            </intent-filter>
        </activity>
    </application>
	    <uses-permission android:name="android.permission.INTERNET"/>
       <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
</manifest>
